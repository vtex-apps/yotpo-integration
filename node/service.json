{
  "stack": "nodejs",
  "memory": 1536,
  "ttl": 30,
  "timeout": 12,
  "minReplicas": 15,
  "maxReplicas": 100,
  "workers": 1,
  "routes": {
    "yotpoIntegration": {
      "path": "/_v/api/yotpo/update",
      "public": false
    },
    "notify": {
      "path": "/notify",
      "public": true
    }
  },
  "events": {
    "orderStatusChange": {
      "sender": "vtex.orders-broadcast",
      "topics": [
        "invoiced"
      ]
    }
  }
}
